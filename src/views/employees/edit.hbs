<main>


    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Announcement</h1>
            <form method="POST">
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{employee.name}}" required>
                <label>Email:</label>
                <input type="text" id="email" name="email" value="{{employee.email}}" required>
                <label>Phone Number:</label>
                <input type="number" id="phone" name="phone" value="{{employee.phone}}" required>
                <label>Date of Birth:</label>
                <input type="date" id="dob" name="dob" min="1900-01-01" max="2020-01-01" value="{{employee.dob}}"
                    required>
                <label>Monthly Salary:</label>
                <input type="number" id="monthlySalary" name="monthlySalary" value="{{employee.monthlySalary}}"
                    required>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>