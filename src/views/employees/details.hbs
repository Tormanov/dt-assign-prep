<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="/static/images/user.png">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{employee.name}}</h1>
                <h3 id="dateDue">Email: {{employee.email}}</h3>
                <h3 id="dateDue">Phone: {{employee.phone}}</h3>
                <h3 id="dateDue">Date of Birth: {{employee.dob}}</h3>
                <p id="price"><span>Monthly Salary: ${{employee.monthlySalary}}</span></p>
                <p id="description">Tasks Completed: {{employee.tasksCompleted}}</p>

            </div>
            <div class="product-btn">
                <div class="author">
                    <a href="/employees/{{employee._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/employees/{{employee._id}}/delete" class="btn-delete">Delete</a>
                </div>

            </div>
        </div>
    </section>
</main>