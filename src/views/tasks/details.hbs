<main>
    <section id="details-info">
        <h1>Task Details</h1>
        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{task.title}}</h1>
                <h3 id="payment">Description: {{task.description}}</h3>
                <h3 id="payment">Due Date: {{task.dueDate}}</h3>
                <p id="price"><span>Assignee: {{task.assigneeName}}</span></p>

            </div>
            <div class="product-btn">
                <div class="author">
                    <a href="/tasks/{{task._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/tasks/{{task._id}}/delete" class="btn-delete">Delete</a>
                </div>

            </div>
        </div>
    </section>
</main>